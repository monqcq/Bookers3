<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="head-line text-center">Sign up</h2>
    </div>
    <div class="col-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group justify-content-around">
          <%= f.label :name, class:"col-sm-1 control-label" %>
          <%= f.text_field :name, class:"col-sm-3 offset-3 form-control-static", autofocus: true %>
        </div>

        <div class="field form-group">
          <%= f.label :email, class:"col-sm-1 control-label" %>
          <%= f.email_field :email, class:"col-sm-3 offset-3 form-control-static", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field form-group">
          <%= f.label :password, "パスワード(6文字以上)", class:"col-3 control-label" %>
          <%= f.password_field :password, class:"col-sm-3 offset-1 form-control-static",autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)", class:"col-3 control-label" %>
          <%= f.password_field :password_confirmation, class:"col-sm-3 offset-1 form-control-static", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "offset-4 btn btn-sm btn-success w-25" %>
        </div>
      <% end %>
    </div>

    <div class="col-12">
    <%= render "devise/shared/links" %>
    </div>

  </div>
</div>