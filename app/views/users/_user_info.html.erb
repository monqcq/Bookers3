<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image_id, :fill, 60,60, fallback: "no_image.jpg", size:'60x60' %>
      <!--プロフィール画像を埋め込む、サイズは６０x６０、画像がない時、no_image.png-->
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "edit",edit_user_path(user), class:"btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>